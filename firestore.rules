
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Public can read artisans and products
    match /artisanProfiles/{artisanId} {
      allow read: if true;
      allow create, update, delete: if request.auth.uid == artisanId;
    }

    match /products/{productId} {
      allow read: if true;
      // Only the artisan associated with the product can write/update/delete
      allow create, update, delete: if request.auth.uid == request.resource.data.artisanId;
    }
    
    // Reviews can be read by anyone, but only created by authenticated users
    // And only edited/deleted by the user who wrote them
    match /products/{productId}/reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth.uid != null;
        allow update, delete: if request.auth.uid == resource.data.userId;
    }

    // Orders can be created by auth'd users
    // Orders can be read by the user who created it, or the artisan who sells it
    // Orders can be updated by the artisan (e.g. status), or user (e.g. cancellation request)
    match /orders/{orderId} {
        allow create: if request.auth.uid == request.resource.data.userId;
        allow read: if request.auth.uid == resource.data.userId || request.auth.uid == resource.data.artisanId;
        allow update: if request.auth.uid == resource.data.userId || request.auth.uid == resource.data.artisanId;

        // Same for order items subcollection
        match /items/{itemId} {
            allow read: if request.auth.uid == get(/databases/$(database)/documents/orders/$(orderId)).data.userId || request.auth.uid == get(/databases/$(database)/documents/orders/$(orderId)).data.artisanId;
            allow create, update, delete: if request.auth.uid == get(/databases/$(database)/documents/orders/$(orderId)).data.userId;
        }
    }
    
    // Notifications can be created by any authenticated user.
    // They can only be read/updated/deleted by the recipient artisan.
    match /notifications/{notificationId} {
      allow create: if request.auth.uid != null;
      allow read, update, delete: if request.auth.uid == resource.data.artisanId;
    }
  }
}
